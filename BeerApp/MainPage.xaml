<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BeerApp.MainPage"
              NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>

        <Label Text="BeerSearch App" 
           HorizontalOptions="Center"
           VerticalOptions="Center" FontSize="18"/>

        <Entry x:Name="beername" Completed="beername_Completed" 
               IsPassword="False" Placeholder="enter beername here!"  
               Margin="50, 30, 50, 25"/>

        <Label x:Name="beerinfos"  Text="Beerdata will be here!" 
               HorizontalOptions="Center" FontSize="20"
           VerticalOptions="CenterAndExpand" Margin="10, 0, 10, 0"/>
        
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="tosecond" Text="Beerlist" 
                    Clicked="tosecond_Clicked" Margin="35, 30, 35, 25" Grid.Column="0"/>
                
            <Button x:Name="favorites" Text="Favorites" Clicked="favorites_Clicked"  
                    Margin="35, 30, 35, 25" Grid.Column="1"/>
        </Grid>
        </StackLayout>
</ContentPage>
